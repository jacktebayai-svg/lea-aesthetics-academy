# Lea Aesthetics Clinical Academy - Production Environment Variables
# Copy this file to .env.local and fill in your production values

# App Configuration
NEXT_PUBLIC_APP_NAME="Lea Aesthetics Clinical Academy"
NEXT_PUBLIC_APP_URL="https://leaaesthetics.com"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration  
NEXT_PUBLIC_API_BASE="https://api.leaaesthetics.com"
NEXT_PUBLIC_API_VERSION="v1"

# Authentication (JWT/Auth0)
NEXT_PUBLIC_AUTH_DOMAIN="your-auth0-domain.auth0.com"
NEXT_PUBLIC_AUTH_CLIENT_ID="your-auth0-client-id"
AUTH_CLIENT_SECRET="your-auth0-client-secret"
AUTH_ISSUER="https://your-auth0-domain.auth0.com/"
AUTH_AUDIENCE="https://api.leaaesthetics.com"
JWT_SECRET="your-jwt-secret-key"

# Payment Processing
NEXT_PUBLIC_STRIPE_PUBLIC_KEY="pk_live_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_DATADOG_RUM="your-datadog-rum-id"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Email Service
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@leaaesthetics.com"

# File Storage
NEXT_PUBLIC_VERCEL_BLOB_READ_WRITE_TOKEN="vercel_blob_rw_token"

# Feature Flags
NEXT_PUBLIC_ENABLE_BOOKING="true"
NEXT_PUBLIC_ENABLE_COURSES="true" 
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Performance
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"

